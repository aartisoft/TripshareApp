<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wowza="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cameraView_onair"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d0d0d"
    tools:context=".TripTalk.OnAirActivity">


    <!-- The camera preview display -->
    <com.wowza.gocoder.sdk.api.devices.WOWZCameraView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        wowza:defaultCamera="back"
        wowza:frameSizePreset="frameSize1920x1080"
        wowza:scaleMode="fill" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearchat_onair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/chat_recy_onair"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                    </android.support.v7.widget.RecyclerView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/beforeclick_linear_onari"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">


                            <EditText
                                android:id="@+id/befor_edit_onair"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:hint="메세지를 입력해주세요."
                                android:textColor="@color/white"
                                android:textColorHint="@color/white" />

                            <ImageView
                                android:id="@+id/befor_send_onair"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_send_black_24dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/end_linear_onair"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.example.tripshare.LiveStream.ui.MultiStateButton

                                android:id="@+id/ic_switch_camera_onair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#000000ff"
                                android:contentDescription="Switch Camera"
                                android:cropToPadding="false"
                                android:padding="10dp"
                                android:src="@drawable/ic_switch_camera" />


                            <!-- The broadcast button -->
                            <ImageView
                                android:id="@+id/end_bt_onair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ic_stop" />

                            <ImageView
                                android:id="@+id/tokensend_img_onair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/token_onair_36dp" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_onair"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="500dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/roomname_edit_onair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="방송 제목을 입력해주세요."
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                    <ImageView
                        android:id="@+id/roomname_bt_onair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_player" />
                </LinearLayout>

            </RelativeLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/heart_lottie_onair"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="right|bottom"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="120dp"
                tools:ignore="RtlHardcoded" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/token_lottie_onair"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="left|bottom"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="120dp"
                tools:ignore="RtlHardcoded" />



        </FrameLayout>

    </LinearLayout>


</FrameLayout>