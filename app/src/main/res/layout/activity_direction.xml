<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">

        <TextView
            android:id="@+id/orgin_Tx_direction"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:layout_weight="2"
            android:text="출발지인데 제목이길어지면 어떻게 할래요"
            android:ellipsize="end"
            android:maxLines="2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/ic_arrow_forward_black_24dp"/>

        <TextView
            android:id="@+id/destination_Tx_direction"
            android:layout_weight="2"
            android:text="도착"
            android:textSize="18sp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_distance"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/mycar_image_direction"
            />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_subway_black_24dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/transit_image_direction"
            />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_walk_black_24dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/walk_image_direction"
            />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_bike_black_24dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/bike_image_direction"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/result_frame_direction"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:id="@+id/result_linear_direction">

    <fragment
        android:id="@+id/map_direction"
        android:layout_weight="8"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context=".Trip.DirectionActivity" />

    <TextView
        android:id="@+id/resultduration_txt_Direction"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="시간"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/resultdistance_txt_Direction"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:gravity="top"
        android:text="거리"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    </LinearLayout>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorAccent"
            android:text="경로를 찾지 못했습니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noresult_tx_Direction"
            android:visibility="invisible"/>

    </FrameLayout>
    </LinearLayout>
