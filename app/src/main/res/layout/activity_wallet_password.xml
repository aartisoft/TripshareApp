<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Token.WalletPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 지갑"
            android:textSize="20dp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/qrwallet_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/nowether_tx_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="이더 총 개수"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/suseung_tx_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Seung 토큰 총 개수"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">


        <Button
            android:id="@+id/refresh_bt_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="새로고침"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/ether_receive_bt_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/colorPrimary"
            android:text="1 이더 충전"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/token_receive_bt_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/colorPrimary"
            android:text="토큰 충전"
            android:textColor="@color/white" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="8dp"
        android:text="****이더 / 토큰 보내기   " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <EditText
            android:id="@+id/address_et_wallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="보낼 지갑 주소" />

        <Button
            android:id="@+id/qr_bt_wallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QR코드" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ethertransfer_bt_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="1 이더 전송"
            android:textColor="@color/white" />

        <Button
            android:layout_marginStart="15dp"
            android:id="@+id/token_bt_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Su Seung 토큰 전송"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/check_bt_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="내 지갑 거래 확인"
        android:textColor="@color/white" />

</LinearLayout>